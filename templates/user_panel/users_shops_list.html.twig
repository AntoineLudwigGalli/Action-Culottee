{% extends 'base.html.twig' %}

{% block title %}Menu de gestion des boutiques{% endblock %}

{% block content %}

    <div class="container-fluid">
        <div class="col-md-10 offset-md-2">
            <div class="row">
                <h1 class="col-12 text-center my-5">Liste des boutiques</h1>
            </div>

            <div class="row">

                <div class="col-12 col-md-12 mx-auto">

                    {% if shops is not empty %}
                            {% for shop in shops %}
                                <tbody>


                                        <tr>
                                            <td>
                                                <div class="mt-3">

                                                    <a onclick="return confirm('Êtes-vous sûr de vouloir supprimer la boutique ?')"
                                                       href="{{ path('admin_panel_shop_delete_', {'id': shop.id, 'csrf_token' : csrf_token('shop_delete_' ~ shop.id)}) }}"
                                                       class=" text-decoration-none text-danger">
                                                        <i class="fa-solid fa-trash-can"></i>
                                                        Supprimer
                                                    </a>

                                                </div>

                                            </td>
                                            <td>{{ shop.owner.getLastname() }}</td>
                                            <td>{{ shop.name }}</td>
                                            <td>{{ shop.address }}</td>
                                            <td>{{ shop.zip }}</td>
                                            <td>{{ shop.city }}</td>
                                            <td>{{ shop.phoneNumber }}</td>
                                            <td>{{ shop.country }}</td>

                                            <td>
                                                <div class="mt-3">

                                                    <a class="text-decoration-none text-warning me-3"
                                                       href="{{ path('admin_panel_shop_edit_', {'id': shop.id}) }}">
                                                        <i class="fa-solid fa-pen-to-square"></i>
                                                        Modifier
                                                    </a>

                                                </div>
                                            </td>
                                        </tr>

                                        {% endfor %}
                                    {% endif %}
                                    </tbody>


                            </div>

                        </div>
        </div>
    </div>
        </div>
    </div>
{% endblock %}