{% extends 'base.html.twig' %}

{% block title %}Modification du mot de pass{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">

            <div class="col-10 mx-auto">

                {# Formulaire de modification du mot de pass #}
                {{ form_start( form, { 'attr': { novalidate:'novalidate' } } ) }}

                    {{ form_row(form.oldPassword) }}

                    {{ form_row(form.newPassword) }}

                    {{ form_widget(form.submit, {'attr': { 'value': 'Modifier' } }) }}
                    <a href="{{ path('user_panel_profil') }}"><button type="button" class="btn btn-danger">Retour</button></a>

                {{ form_end(form) }}

            </div>

        </div>

    </div>

{% endblock %}

