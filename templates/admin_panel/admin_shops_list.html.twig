{% extends 'baseAdmin.html.twig' %}

{% block title %}Menu d'administration{% endblock %}

{% block content %}

    <div class="container-fluid">
        <div class="col-md-10 offset-md-2">
            <div class="row">
                <h1 class="col-12 text-center my-5">Liste des boutiques</h1>
            </div>

            <div class="row">

                <div class="col-12 col-md-8 mx-auto">

                    <div class="row">
                        <p class="col-12 text-center">Nombre total de boutiques : {{ shops.getTotalItemCount() }}</p>
                    </div>


                    {% if shops is not empty %}
                        <div class="row">
                            <div class="col-12 my-3 text-center">
                                <div class="d-inline-block">
                                    {{ knp_pagination_render(shops) }}
                                </div>
                            </div>
                        </div>
                    {% endif %}


                    <div class="row">

                        <div class="col-12 table-responsive">

                            <table class="align-middle table table-striped table-hover">
                                <thead>
                                <tr>
                                    <th scope="col"></th>
                                    <th scope="col">{{ knp_pagination_sortable(shops, 'propriétaire ', 'a.owner') }}</th>
                                    <th scope="col">{{ knp_pagination_sortable(shops, 'Nom ', 'a.name') }}</th>
                                    <th scope="col">{{ knp_pagination_sortable(shops, 'Adresse ', 'a.address') }}</th>
                                    <th scope="col">{{ knp_pagination_sortable(shops, 'Code postal ', 'a.zip') }}</th>
                                    <th scope="col">{{ knp_pagination_sortable(shops, 'Ville ', 'a.city') }}</th>
                                    <th scope="col">{{ knp_pagination_sortable(shops, 'N° téléphone ', 'a.phoneNumber') }}</th>
                                    <th scope="col">{{ knp_pagination_sortable(shops, 'Pays ', 'a.country') }}</th>


                                </tr>
                                </thead>
                                <tbody>


                                {% for shop in shops %}


                                    <tr>
                                        <td>
                                            <div class="mt-3">

                                                <a onclick="return confirm('Êtes-vous sûr de vouloir supprimer la boutique ?')"
                                                   href="{{ path('admin_panel_shop_delete_', {'id': shop.id, 'csrf_token' : csrf_token('shop_delete_' ~ shop.id)}) }}"
                                                   class=" text-decoration-none text-danger">
                                                    <i class="fa-solid fa-trash-can"></i>
                                                    Supprimer
                                                </a>

                                            </div>

                                        </td>
                                        <td>{{ shop.owner.getLastname() }}</td>
                                        <td>{{ shop.name }}</td>
                                        <td>{{ shop.address }}</td>
                                        <td>{{ shop.zip }}</td>
                                        <td>{{ shop.city }}</td>
                                        <td>{{ shop.phoneNumber }}</td>
                                        <td>{{ shop.country }}</td>

                                        <td>
                                            <div class="mt-3">

                                                <a class="text-decoration-none text-warning me-3"
                                                   href="{{ path('admin_panel_shop_edit_', {'id': shop.id}) }}">
                                                    <i class="fa-solid fa-pen-to-square"></i>
                                                    Modifier
                                                </a>

                                            </div>
                                        </td>
                                    </tr>

                                {% endfor %}
                                </tbody>
                            </table>

                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>
{% endblock %}