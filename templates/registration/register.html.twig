{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
<div class="container-fluid">
    
    
    <h1>Inscription</h1>
    <div class="row">
        <div class="col-12 col-md-6 mx-auto mt-5">
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.firstname) }}
            {{ form_row(registrationForm.lastname) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.phoneNumber) }}
            {{ form_row(registrationForm.memberIdNumber) }}
            {{ form_row(registrationForm.newsletterOption) }}
            {{ form_row(registrationForm.agreeTerms) }}

            {# Affichage du Recaptcha #}
            <div class="mb-3">
                <div class="mb-2">Captcha de sécurité</div>

                <div class="g-recaptcha" data-sitekey="{{ google_recaptcha_site_key }}"></div>
            </div>
            <button type="submit" class="btn btn-primary">S'inscrire</button>
        {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
    {% block jsIncludes %}    <script src="https://www.google.com/recaptcha/api.js" async defer></script>{% endblock %}
{% endblock %}
