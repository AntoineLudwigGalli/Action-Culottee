{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <h1>Les Actualités Culottées</h1>
    {# Blocs de mise en forme des actualités #}
    <div class="container-fluid">
        <div class="row">
            {% for event in events %}

            <div class="agenda-entry d-flex justify-content-center align-items-center mb-4 col-12 col-md-10">
                <p class="m-0">
                    <i class="fa-solid fa-calendar mx-5"></i>
                    {#todo Rendre l'affichage des données dynamique #}
                    {# todo: Essayer de trouver un logo de calendrier un peu plus joli #}
                    <span class="text-decoration-underline me-2">{{ event.eventDate|format_datetime(locale='fr') }}</span> {{
                    event.eventDescription }}
                </p>
            </div>
            {% endfor %}


        {#        todo : faire la barre de pagination #}
    </div>
{% endblock %}

