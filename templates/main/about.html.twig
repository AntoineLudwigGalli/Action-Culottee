{% block jsIncludes %}

    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.0.7/dist/js/splide.min.js"></script>

    <script>

        document.addEventListener('DOMContentLoaded', function () {

            new Splide('.splide', {


                type: 'loop',
                direction: "ttb",
                updateOnMove: true,

                isNavigation: true,
                wheel: true,
                pagination: false,
                focus: "center",

                gap: '2.5rem',

                perPage: 1,

                rewind: true,

                width: '100vh',
                height: '80rem',
                fixedHeight: 'auto',
                autoWidth: true,
                autoHeight: true,

// breakpoints responsive

                breakpoints: {

                    1400:{
                        height: '85rem',
                    },

                    1200 :{
                        height: '90rem',
                    },

                    1024:{
                        height: '100rem',
                    },

                    767: {

                        type: 'loop',
                        direction: "ltr",
                        updateOnMove: true,

                        isNavigation: true,
                        wheel: true,
                        pagination: false,
                        focus: 'center',

                        perPage: 3,

                        rewind: true,

                        width: '100vw',
                        height: '150rem',

                        autoWidth: false,
                        autoHeight: false,


                    },

                },

            }).mount();

        });

    </script>


