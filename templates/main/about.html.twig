                                <h4 class="text-center">test</h4>
                            </div>
                        </li>
                        <li class="splide__slide">
                            <div class="d-flex flex-column">
                                <img class="img-fluid w-100" src="{{ asset('images/test.png') }}" alt="">
                                <h4 class="text-center">test2</h4>
                            </div>
                        </li>
                        <li class="splide__slide">
                            <div class="d-flex flex-column">
                                <img class="img-fluid w-100" src="{{ asset('images/test.png') }}" alt="">
                                <h4 class="text-center">test3</h4>
                            </div>
                        </li><li class="splide__slide ">
                            <div class="d-flex flex-column">
                                <img class="img-fluid w-100" src="{{ asset('images/test.png') }}" alt="">
                                <h4 class="text-center">test3</h4>
                            </div>
                        </li>

                    </ul>
                </div>
            </div>

        </section>

    </div>





{% endblock %}

{% block jsIncludes %}

    <script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.0.7/dist/js/splide.min.js"></script>

    <script>

        document.addEventListener('DOMContentLoaded', function () {

            new Splide('.splide', {


                type: 'loop',
                direction: "ttb",
                updateOnMove: true,

                isNavigation: true,
                wheel: true,
                pagination: false,
                focus: "center",

                gap: '2.5rem',

                perPage: 1,

                rewind: true,

                width: '100vh',
                height: '80rem',
                fixedHeight: 'auto',
                autoWidth: true,
                autoHeight: true,

// breakpoints responsive

                breakpoints: {

                    1400:{
                        height: '85rem',
                    },

                    1200 :{
                        height: '90rem',
                    },

                    1024:{
                        height: '100rem',
                    },

                    767: {

                        type: 'loop',
                        direction: "ltr",
                        updateOnMove: true,

                        isNavigation: true,
                        wheel: true,
                        pagination: false,
                        focus: 'center',

                        perPage: 3,

                        rewind: true,

                        width: '100vw',
                        height: '150rem',

                        autoWidth: false,
                        autoHeight: false,


                    },

                },

            }).mount();

        });

    </script>


{% endblock %}
